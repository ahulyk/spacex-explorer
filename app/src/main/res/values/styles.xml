<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ContentLoadingProgress" parent="AppTheme">
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <style name="Regular16GrayStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Regular14GrayStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Regular10GrayStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Medium20BlackStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Medium16BlackStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Regular16BlackStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="ButtonBorderlessBlueStyle" parent="Theme.MaterialComponents">
        <item name="materialButtonStyle">@style/ButtonBorderlessBlueStyleRef</item>
    </style>

    <style name="ButtonBorderlessBlueStyleRef" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonOutlineBlueStyle" parent="Theme.MaterialComponents">
        <item name="materialButtonStyle">@style/ButtonOutlineBlueStyleRef</item>
    </style>

    <style name="ButtonOutlineBlueStyleRef" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
